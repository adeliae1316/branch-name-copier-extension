{
  "name": "Branch name copier",
  "version": "0.1.0",
  "manifest_version": 3,
  "description": "Copy current branch name to clipboard.",
  "permissions": [
    "contextMenus",
    "clipboardWrite",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://*/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "192": "icon/192.png"
  }
}